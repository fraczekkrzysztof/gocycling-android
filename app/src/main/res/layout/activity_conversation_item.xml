<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_row_conversation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/conversation_list_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartText"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/conversation_list_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conversation_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartText"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/conversation_list_author"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conversation_list_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="Example text"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversation_list_author" />


</androidx.constraintlayout.widget.ConstraintLayout>