<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_row_event_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="15dp">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapdialog_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/map_dialog_button_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/map_dialog_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/map_dialog_button_ok"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/map_dialog_button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map_dialog_button_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>