<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_row_event_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.google.android.gms.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapdialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
       />

    <Button
        android:id="@+id/map_dialog_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mapdialog_view"
        android:layout_marginLeft="10dp"
        android:text="cancel" />

    <Button
        android:id="@+id/map_dialog_button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mapdialog_view"
        android:layout_alignBottom="@+id/mapdialog_view"
        android:layout_marginRight="10dp"
        android:text="Ok" />
</RelativeLayout>